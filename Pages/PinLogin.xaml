<Page x:Class="RegIN.Pages.PinLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegIN.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PinLogin">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Image Source="/Images/ic_user.png" Width="100" Height="100" Margin="0,0,0,30"/>
            <TextBlock Text="Enter 4-digit PIN" FontSize="22" TextAlignment="Center"/>
            <PasswordBox x:Name="PinBox" MaxLength="4" FontSize="40"  Margin="0,20"/>
            <TextBlock x:Name="ErrorText" Foreground="Red" TextAlignment="Center" Margin="0,10"/>
            <Button Content="Login with PIN" Click="Login_Click" Margin="0,20"/>
            <TextBlock Text="Log in with password" Foreground="Blue" Cursor="Hand" 
                       MouseDown="GoToPasswordLogin" TextAlignment="Center" Margin="0,20"/>
            <TextBlock x:Name="GoToChoiceLogin" 
           Text="Выбрать другой способ входа" 
           Foreground="Blue" 
           TextDecorations="Underline" 
           Cursor="Hand"
           Margin="0,10,0,0"
           HorizontalAlignment="Center"
           />
        </StackPanel>
    </Grid>
</Page>
