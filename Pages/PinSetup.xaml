<!-- Pages/PinSetup.xaml -->
<Page x:Class="RegIN.Pages.PinSetup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Set 4-digit PIN for quick login" FontSize="20" Margin="0,0,0,20" TextAlignment="Center"/>
            <PasswordBox x:Name="PinBox" MaxLength="4" FontSize="32"  Margin="0,0,0,10"/>
            <TextBlock x:Name="Info" Foreground="Red" TextAlignment="Center"/>
            <Button Content="Confirm PIN" Click="ConfirmPin_Click" Margin="0,20,0,0" Height="40"/>
        </StackPanel>
    </Grid>
</Page>